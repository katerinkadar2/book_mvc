@model BookApplication.Models.Book

@{
    ViewBag.Title = "Редактирование";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Книга</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PublishYear)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PublishYear)
            @Html.ValidationMessageFor(model => model.PublishYear)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Author)
        </div>
        <div class="editor-field">
           @* @Html.EditorFor(model => model.Author)*@
            @Html.DropDownListFor(model => model.Author, (SelectList)ViewBag.AuthorList,  "")
            @Html.ValidationMessageFor(model => model.Author)
        </div>

        <p>
            <input type="submit" value="Сохранить" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Вернуться к списку", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
